<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Forum App</title>
    <link href="https://fonts.googleapis.com/css?family=Hind" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="/css/normalize.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.0/css/materialize.min.css">
    <link rel="stylesheet" type="text/css" href="/css/style.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.0/js/materialize.min.js"></script>
    <script type="text/javascript" src="https://code.jquery.com/jquery-3.1.1.min.js"></script>
    <script type="text/javascript" src="/js/main.js"></script>
  </head>
  <body>
    <main>
      <header>
        <h1>Forum</h1>
      </header>
      <section>
        <div class="add-topic">
        <a class="btn-floating btn-large waves-effect waves-light" href="/topics/new"><i class="material-icons">+</i></a>
        </div>
        <div class="container">
        <% topics.forEach((topic) => { %>
          <div class="topics-container">
            <div class="col">
              <a href="/topics/<%= topic.id %>">
                <h2><%= topic.title %></h2>
              </a>
              <p><%= topic.content %></p>
              <p>Author: <%= topic.username %></p>
              <p>Likes: <%= topic.topic_votes%></p>
              <p>Comments: <%= topic.comments %></p>
              <form action="/topics/<%= topic.id %>/like?_method=PUT" method="POST">
                <input class="waves-effect waves-light btn blue" type="submit" value="LIKE">
              </form>
            </div>
          </div>
        <% }); %>
    </div>
      </section>
    </main>

  </body>
</html>
